# Firebase Configuration
VITE_FIREBASE_API_KEY=your_firebase_api_key
VITE_FIREBASE_AUTH_DOMAIN=your_project.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=your_project_id
VITE_FIREBASE_STORAGE_BUCKET=your_project.appspot.com
VITE_FIREBASE_MESSAGING_SENDER_ID=your_sender_id
VITE_FIREBASE_APP_ID=your_app_id
VITE_FIREBASE_MEASUREMENT_ID=your_measurement_id

# Google reCAPTCHA v3 Site Key for Firebase App Check
# Get this from: https://www.google.com/recaptcha/admin/create
# Then add it to Firebase Console > App Check settings
VITE_RECAPTCHA_SITE_KEY=your-recaptcha-site-key-here

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key

# Stripe Configuration (for Rox Chips purchases)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Server Configuration
PORT=3001
STRIPE_PORT=3002
EMAIL_PORT=3003
NODE_ENV=development
CLIENT_URL=http://localhost:3000
API_URL=http://localhost:3001

# Amazon SES Configuration (for email subscriptions)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key
SES_FROM_EMAIL=noreply@technorox.com
SES_REPLY_TO_EMAIL=support@technorox.com
